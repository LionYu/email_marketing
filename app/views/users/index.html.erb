<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<%= link_to "New user", new_user_path %>

<div id="users">
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Marketing category</th>
        <th>Sign up at</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.email_marketing_category.name %></td>
          <td><%= user.sign_up_at.to_date %></td>
          <td>
            <%= link_to "Show", user %> |
            <%= link_to "Edit", edit_user_path(user) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @users %>
